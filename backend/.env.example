# VisionQuest Environment Configuration
# Copy this file to .env and modify values as needed

# === Application Configuration ===
APP_NAME="VisionQuest"
APP_VERSION="0.1.0"
ENV="development"
DEBUG=true

# === API Configuration ===
API_PREFIX="/api/v1"
API_HOST="0.0.0.0"
API_PORT=8000
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:7860","http://127.0.0.1:7860"]

# === Hardware Configuration ===
# Options: auto, cpu, cuda, mps, cuda:0, cuda:1, etc.
DEVICE="auto"
MAX_WORKERS=4
MAX_BATCH_SIZE=10

# === Model Configuration ===
# Default models for each capability
DEFAULT_CAPTION_MODEL="blip2"
DEFAULT_VQA_MODEL="llava"
DEFAULT_LLM_MODEL="qwen"

# === Storage Paths ===
UPLOAD_DIR="./data/uploads"
OUTPUT_DIR="./data/outputs"
KB_DIR="./data/kb"
MODEL_CACHE_DIR="./models"

# === Security Settings ===
ENABLE_NSFW_FILTER=true
ENABLE_FACE_BLUR=false
CONTENT_FILTER_LEVEL="medium"  # Options: off, low, medium, high
MAX_FILE_SIZE=10485760  # 10MB in bytes

# === Database Configuration ===
DATABASE_URL="sqlite:///./data/visionquest.db"

# === Development Settings ===
# Enable detailed logging in development
LOG_LEVEL="DEBUG"
ENABLE_RELOAD=true

# === Production Settings (uncomment for production) ===
# ENV="production"
# DEBUG=false
# LOG_LEVEL="INFO"
# ENABLE_RELOAD=false
# API_HOST="0.0.0.0"

# === Advanced Configuration ===
# Model loading timeout (seconds)
MODEL_LOAD_TIMEOUT=300

# Memory management
ENABLE_MODEL_UNLOADING=true
MAX_MEMORY_USAGE_PERCENT=80

# Batch processing
MAX_CONCURRENT_REQUESTS=20
REQUEST_TIMEOUT=60

# === Feature Flags ===
# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable performance monitoring
ENABLE_METRICS=false

# Enable API key authentication (for production)
ENABLE_API_AUTH=false
API_KEY=""